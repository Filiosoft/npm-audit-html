{
  "name": "npm-audit-html",
  "version": "0.0.0-development",
  "description": "Generate a HTML report for NPM Audit",
  "main": "dist/src/index.js",
  "bin": {
    "npm-audit-html": "dist/src/index.js"
  },
  "scripts": {
    "test": "npm run lint && npm run audit-report && npm audit",
    "watch": "tsc --watch",
    "test-ci": "cd test; npm i && npm audit --json | node ../index.js",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "lint!": "npm run format && npm run lint:fix",
    "format": "prettier --write '*.js' 'lib/**/*.js'",
    "audit-report": "npm audit --json | node dist/src/index.js -o tests/npm-audit.html",
    "cm": "git-cz",
    "pre-commit": "lint-staged",
    "semantic-release": "semantic-release"
  },
  "author": "eventOne Labs <opensource@event1.io>",
  "repository": "eventOneHQ/npm-audit-html",
  "license": "MIT",
  "devDependencies": {
    "@types/fs-extra": "^9.0.7",
    "@types/node": "^14.14.31",
    "@types/numeral": "^2.0.0",
    "@types/update-notifier": "^5.0.0",
    "@typescript-eslint/eslint-plugin": "^4.15.2",
    "@typescript-eslint/parser": "^4.15.2",
    "commitizen": "^4.2.2",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^7.20.0",
    "eslint-config-standard": "^15.0.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.2",
    "husky": "^4.3.0",
    "lint-staged": "^10.4.2",
    "prettier": "^2.1.2",
    "semantic-release": "^17.2.1",
    "typescript": "^4.1.5"
  },
  "dependencies": {
    "chalk": "^4.1.0",
    "commander": "^7.1.0",
    "fs-extra": "^8.1.0",
    "handlebars": "^4.7.6",
    "highlight.js": "^10.3.1",
    "marked": "^1.2.2",
    "moment": "^2.29.1",
    "numeral": "^2.0.6",
    "open": "^7.3.0",
    "terminal-link": "^2.1.1",
    "update-notifier": "^4.1.3"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "lint-staged": {
    "*.js": [
      "npm run lint!",
      "git add"
    ]
  }
}
